<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:showIn="@layout/activity_intro"
                tools:context=".IntroActivityFragment"
              android:orientation="vertical"
              android:id="@+id/quizLinearLayout"
               android:background="@drawable/fern_darkest">

   <TextView
       android:id="@+id/introHeadingTextView"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
       android:layout_marginBottom="@dimen/spacing"
       android:text="@string/intro_heading"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:textColor="@color/support_text_default"
       android:textStyle="bold" />

   <TextView
       android:id="@+id/introToptextTextView"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
       android:layout_marginBottom="@dimen/spacing"
       android:text="@string/intro_toptext"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:textColor="@color/support_text_default"
       android:textStyle="bold" />



   <RelativeLayout
       android:id="@+id/row5LinearLayout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:weightSum="1">

      <ImageButton
          android:id="@+id/startImageButton"
          android:layout_width="186dp"
          android:layout_height="98dp"
          android:lines="2"
          android:background="@android:color/transparent"
          android:cropToPadding="false"
          android:paddingLeft="10dp"
          android:scaleType="fitXY"
          android:src="@drawable/start_button"
          android:onClick="startQuiz"
          android:layout_marginStart="16dp"
          android:layout_marginBottom="14dp"
          android:layout_alignParentBottom="true"
          android:layout_alignParentStart="true" />

      <ImageView
          android:id="@+id/helpImageView"
          android:layout_width="183dp"
          android:layout_height="247dp"
          android:layout_gravity="right"
          android:layout_weight="4.47"
          android:adjustViewBounds="true"
          android:background="@android:color/transparent"
          android:lines="2"
          android:scaleType="fitXY"
          android:src="@drawable/penguin"
          android:layout_marginEnd="60dp"
          android:layout_alignParentBottom="true"
          android:layout_alignParentEnd="true" />


   </RelativeLayout>
</LinearLayout>
